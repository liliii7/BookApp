  {{#if hasBooks}}
  
  <div class="title-container">
      <a href="/bookshop/add-book" class="btn btn-outline-secondary">+ New Book</a>
  </div>
  <div class="images-container">
    {{#each bks}}
      <div class="card-container">
        <div class="card">
          <img
            src="{{this.imagePath}}"
            class="card-img-top img-size"
            alt="..."
          />
          <div class="card-body home-card">
            <h5 class="card-title">{{this.bookName}} - {{this.year}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Category: {{this.category.dataValues.categoryName}}</h6>
            <h6 class="card-subtitle mb-2 text-muted">Author: {{this.author.dataValues.authorName}}</h6>
            <h6 class="card-subtitle mb-2 text-muted">Editorial: {{this.editorial.dataValues.editorialName}}</h6>
            <div class="btn-container">
            <form method="get" action="/bookshop/edit-book/{{this.bookId}}" class="form-edit">
                  <button type="submit" class="btn btn-outline-secondary">Edit</button>
            </form>
             <form
                method="post"
                action="/bookshop/delete-book"
                class="form-delete"
              >
                <input type="hidden" value="{{this.bookId}}" name="BookId" />
                <button
                  type="submit"
                  class="btn btn-outline-secondary btn-delete"
                >Delete</button>
              </form>
              </div>
          </div>
        </div>
        </div>
    {{/each}}
  </div>
{{else}}
  <h1>No books found!</h1>
{{/if}}
