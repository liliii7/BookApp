{{#if hasEditorials}}
  <div class="title-container">
      <a href="/bookshop/add-editorial" class="btn btn-outline-secondary">+ New Editorial</a>
  </div>
  <div class="images-container">
    {{#each edt}}
      <div class="card-container">
        <div class="card">
          <div class="card-body home-card">
            <h5 class="card-title">{{this.editorialName}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Phone: {{this.phone}}</h6>
            <h6 class="card-subtitle mb-2 text">Country: {{this.country}}</h6> 
            <h6 class="card-subtitle mb-2 text">Books: {{this.bookCount}}</h6> 

            <div class="btn-container">
              <form method="get" action="/bookshop/edit-editorial/{{this.editorialId}}" class="form-edit">
                <button type="submit" class="btn btn-outline-secondary">Edit</button>
              </form>
              <form method="post" action="/bookshop/delete-editorial" class="form-delete">
                <input type="hidden" value="{{this.editorialId}}" name="EditorialId" />
                <button type="submit" class="btn btn-outline-secondary btn-delete">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h1>No editorials found!</h1>
{{/if}}
